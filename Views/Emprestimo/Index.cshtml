@model IEnumerable<EmprestimosModel>

<div class="container">

    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Empréstimos</h1>
        <a class="btn btn-success mx-2" asp-controller="Emprestimo" asp-action="Cadastrar">Cadastrar novo empréstimo</a>
    </div>

    @if(TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success text-dark" role="alert">
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger text-dark" role="alert">
            @TempData["MensagemErro"]
        </div>
    }

    <table id="Emprestimos" class="table table-dark table-hover">
      <thead>
        <tr>
          <th scope="col">Recebedor</th>
          <th scope="col">Fornecedor</th>
          <th scope="col">Livro</th>
          <th scope="col">Última atualização</th>
          <th></th>
        </tr>
      </thead>
      <tbody>

          @if(Model != null)
          {
              @foreach(var emprestimo in Model)
                {
                  <tr>
                    <th scope="row">@emprestimo.Recebedor</th>
                    <td>@emprestimo.Recebedor</td>
                    <td>@emprestimo.LivroEmprestado</td>
                    <td>@emprestimo.dataUltimaAtualizacao</td>
                    <td>
                        <a asp-controler="Emprestimo" asp-action="Editar" asp-route-id="@emprestimo.Id" class="btn btn-warning mx-2">Editar</a>
                        <a asp-controler="Emprestimo" asp-action="Excluir" asp-route-id="@emprestimo.Id" class="btn btn-danger mx-2">Excluir</a>
                    </td>
                  </tr> 
                }
  
          }

      </tbody>
    </table>

</div>
